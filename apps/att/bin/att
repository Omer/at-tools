#!/usr/bin/env ruby

require 'pathname'
require File.join(File.dirname(Pathname.new(__FILE__).realpath),'../lib/att')

AT_MAN_PATH = File.expand_path("~/.at-tools/utils/man")

case ARGV.shift
when "update"
  updater = Updater.new
  updater.update
when "man"
  if ARGV.first.nil?
    puts "Please specify a app name. e.g. att man print"
  else
    puts "man #{AT_MAN_PATH}/#{ARGV.first}.1"
    `man #{AT_MAN_PATH}/#{ARGV.first}.1`
  end
else
  puts "Usage: att [update | man]"
end
